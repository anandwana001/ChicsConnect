<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/user_world_caption_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/eightdp"
        android:ellipsize="end"
        android:lines="3"
        android:maxLines="3"
        android:padding="@dimen/eightdp"
        android:layout_margin="@dimen/fourdp"
        android:textSize="@dimen/fourteensp"
        android:hint="@string/write_caption"
        android:background="@drawable/edit_box"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/user_post_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/list_divider"
        android:dividerHeight="1dp"
        android:listSelector="@drawable/list_row_selector"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_below="@+id/user_world_caption_edit"
        android:layout_alignEnd="@+id/user_world_caption_edit" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/user_world_post_image_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        app:borderWidth="0dp"
        app:elevation="6dp"
        app:fabSize="normal"
        android:layout_marginStart="@dimen/fab_margin"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginTop="@dimen/fab_margin"
        app:backgroundTint="@color/colorPrimaryDark"
        app:srcCompat="@drawable/ic_create_event"
        android:layout_above="@+id/create_button"
        android:layout_alignEnd="@+id/user_post_list" />

    <Button
        android:id="@+id/create_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/finish_button_bg"
        android:text="@string/post"
        android:textColor="@android:color/white" />

</RelativeLayout>