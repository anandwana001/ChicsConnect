<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/activity_horizontal_margin">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/user_profile_image"
                app:srcCompat="@drawable/imagehere"
                android:layout_gravity="center"
                android:background="@drawable/edit_box" />

            <TextView
                android:id="@+id/user_emailid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/eightdp"
                android:textSize="@dimen/twelevesp"
                android:textColor="@color/colorAccent"
                tool:text="abc@gmail.com" />

            <EditText
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                android:padding="8dp"
                android:layout_marginTop="@dimen/eightdp"
                android:textSize="@dimen/twelevesp"
                android:hint="@string/home_name"
                android:background="@drawable/edit_box"
                tool:text="Name" />

            <EditText
                android:id="@+id/user_bio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="3"
                android:maxLines="3"
                android:padding="8dp"
                android:layout_marginTop="@dimen/eightdp"
                android:textSize="@dimen/twelevesp"
                android:hint="@string/your_bio"
                android:background="@drawable/edit_box"
                tool:text="Developer: Android Developer Nanodegree. Less Human, More Being. Storyteller. Explorer Local Guide. Android Facilitator." />

            <EditText
                android:id="@+id/user_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                android:padding="8dp"
                android:layout_marginTop="@dimen/eightdp"
                android:textSize="@dimen/twelevesp"
                android:hint="@string/phone_num"
                android:background="@drawable/edit_box"
                tool:text="1234567890" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/user_home_country"
                android:layout_margin="4dp"
                android:padding="8dp" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/user_home_state"
                android:layout_margin="4dp"
                android:padding="8dp" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/user_home_city"
                android:layout_margin="4dp"
                android:padding="8dp" />

            <Button
                android:id="@+id/create_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/finish_button_bg"
                android:textColor="@android:color/white"
                android:padding="8dp"
                android:layout_marginTop="@dimen/eightdp"
                android:text="@string/finishSetup"/>

        </LinearLayout>
</ScrollView>
