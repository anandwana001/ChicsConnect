<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    android:background="@color/white">

    <ImageView
        android:id="@+id/map"
        android:layout_width="@dimen/splash_icon"
        android:layout_height="@dimen/splash_icon"
        app:srcCompat="@drawable/ic_home_black_24dp"
        android:background="@drawable/edit_box"
        android:padding="@dimen/activity_horizontal_margin"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_home_splash"
        android:textSize="@dimen/sixteensp"
        android:layout_below="@+id/map"
        android:layout_alignEnd="@+id/map"
        android:gravity="center"
        android:padding="@dimen/fourdp"/>

    <ImageView
        android:id="@+id/user"
        android:layout_width="@dimen/splash_icon"
        android:layout_height="@dimen/splash_icon"
        app:srcCompat="@drawable/ic_user_profile"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/edit_box"
        android:padding="@dimen/activity_horizontal_margin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_notifications"
        android:id="@+id/textView4"
        android:textSize="@dimen/sixteensp"
        android:layout_below="@+id/user"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/user"
        android:gravity="center"
        android:padding="@dimen/fourdp"
        android:layout_alignBottom="@+id/textView2" />

    <ImageView
        android:id="@+id/event"
        android:layout_width="@dimen/splash_icon"
        android:layout_height="@dimen/splash_icon"
        app:srcCompat="@drawable/ic_dashboard_black_24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/edit_box"
        android:padding="@dimen/activity_horizontal_margin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_dashboard"
        android:id="@+id/textView"
        android:textSize="@dimen/sixteensp"
        android:layout_above="@+id/event"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:padding="@dimen/fourdp"/>

    <ImageView
        android:id="@+id/world"
        android:layout_width="@dimen/splash_icon"
        android:layout_height="@dimen/splash_icon"
        app:srcCompat="@drawable/ic_whatshot_black_24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/edit_box"
        android:padding="@dimen/activity_horizontal_margin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_world"
        android:id="@+id/textView3"
        android:textSize="@dimen/sixteensp"
        android:layout_above="@+id/world"
        android:layout_alignStart="@+id/world"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:padding="@dimen/fourdp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:textSize="@dimen/eighteensp"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/activity_horizontal_margin"
        android:id="@+id/textView5"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>